      PGRST_DB_SCHEMA_CACHE_DURATION: 20
      PGRST_DB_SCHEMAS: ${PGRST_DB_SCHEMAS}
      PGRST_DB_ANON_ROLE: anon
      PGRST_JWT_SECRET: ${JWT_SECRET}
      PGRST_DB_USE_LEGACY_GUCS: "false"
      PGRST_DB_PREPARED_STATEMENTS: true
      PGRST_APP_SETTINGS_JWT_SECRET: ${JWT_SECRET}
      PGRST_APP_SETTINGS_JWT_EXP: ${JWT_EXPIRY}
      PGRST_DB_MAX_ROWS: 200000
      PGRST_DB_POOL: 100
      PGRST_DB_POOL_TIMEOUT: 60
      PGRST_DB_POOL_ACQUISITION_TIMEOUT: 60
    command:
      [
        "postgrest"
      ]
  # To use S3 backed storage: docker compose -f docker-compose.yml -f docker-compose.s3.yml up
  storage:
    container_name: supabase-storage-{{project_id}}
    image: supabase/storage-api:v1.22.2
    restart: unless-stopped
    env_file:
      - ../../secrets/.env
      - ../../.env
      - .env
    networks:
      - rede-supabase
    volumes:
